#:import hex kivy.utils.get_color_from_hex
#:import threading threading
Radio_Player:
<Radio_Player>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: hex("#221c1e")
        Rectangle:
            pos: self.pos
            size: self.size
    rows: 5
    Image:
        source: 'LOGO18K.png'
    Bottom_layout:

<Bottom_layout>
    Label:
        id: name_song
        text:root.radio_name
        size_hint: .1,1.4
        font_size: '18sp'
        font_name: 'fonts/TF_PHETHAI'
    Label:
        id: name_dj
        text: "18K Radio"
        size_hint: .1,1.2
        font_size: '30sp'
        font_name: 'fonts/TF_PHETHAI'
    ToggleButton: #MUTE_VOLUME
        id: mute_volume
        background_color: hex("#221c1e")
        size_hint_y: None
        height: '60dp'
        background_color: '#1d1719'
        background_normal: '#221c1e'
        pos: '300dp','0dp' 
        on_state: threading.Thread(target=root.on_state_mute_unmute(self)).start()
        Image:
            id: img_sound
            source: 'unmute.png'
            size_hint_y: None
            height: '40dp'
            pos: '200dp','10dp'
    Label:
        height: '60dp'
        background_color: '#1d1719'
        ToggleButton: #PLAY_PAUSE
            id: play_pause
            background_color: hex("#221c1e")
            size_hint_y: None
            height: '60dp'
            background_color: '#1d1719'
            background_normal: '#221c1e'
            pos: '300dp','0dp' 
            on_state: threading.Thread(target=root.on_state_play_pause(self)).start()
            Image:
                id: img_player
                source: 'play.png'
                size_hint_y: None
                height: '40dp'
                pos: '300dp','10dp'
        Slider:
            id: slider
            size_hint_y: None
            size_hint_x: None
            height: '60dp'
            width: '200dp'
            min:0
            max:100
            value: 80
            on_value: root.volume(self)
            cursor_image: 'slider.png'
            cursor_disabled_image: 'slider_disabled.png'
            background_horizontal:'slider_tab.png'
            background_width: '5dp'
        Label:
            text: str(int(slider.value)) + "%"
            font_size: '10dp'